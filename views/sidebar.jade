.city.content
  {{currentCity.name}}
  //- select(ng-model='selectedCity', ng-change='changeCity()', ng-options='city as city.name for city in cities')
  span.pull-right(title='Ändra stad')
    i.fa.fa-cog.fa-lg


.questions.content(ng-hide="hasCaregiverSelected()")

  h4 Hitta ditt vårdboende!
  p.instructions(ng-hide='hideInstructions()')
    i.fa.fa-info-circle
    | Markera de områden som är viktiga för dig!

  p.pull-right Tillgänglighet
   div.onoffswitch1
    input(type='checkbox', id="tillganglighetsswitch" ng-model="switches.0" ng-change="switchChange()").onoffswitch1-checkbox
    label(for="tillganglighetsswitch").onoffswitch1-label
     span.onoffswitch1-inner
     span.onoffswitch1-switch
  p.pull-right Bemötande
   div.onoffswitch2
    input(type='checkbox', id="bemotandeswitch" ng-model="switches.1" ng-change="switchChange()").onoffswitch2-checkbox
    label(for="bemotandeswitch").onoffswitch2-label
     span.onoffswitch2-inner
     span.onoffswitch2-switch
  p.pull-right Delaktighet
   div.onoffswitch3
    input(type='checkbox', id="delaktighetswitch" ng-model="switches.2" ng-change="switchChange()").onoffswitch3-checkbox
    label(for="delaktighetswitch").onoffswitch3-label
     span.onoffswitch3-inner
     span.onoffswitch3-switch
  p.pull-right Information
   div.onoffswitch4
    input(type='checkbox', id="informationsswitch" ng-model="switches.3" ng-change="switchChange()").onoffswitch4-checkbox
    label(for="informationsswitch").onoffswitch4-label
     span.onoffswitch4-inner
     span.onoffswitch4-switch
  p.pull-right Mat och fritid
   div.onoffswitch5
    input(type='checkbox', id="matswitch" ng-model="switches.4" ng-change="switchChange()").onoffswitch5-checkbox
    label(for="matswitch").onoffswitch5-label
     span.onoffswitch5-inner
     span.onoffswitch5-switch

.result.content(ng-hide="hasCaregiverSelected()")
  h4 Vårdbolag som passar dig

  ul.list-unstyled
    li(ng-repeat="caregiver in caregivers") 
      a(ng-click="selectCaregiver(caregiver.name)")) {{$index+1}}. {{caregiver.name}}


.info.content(ng-show="hasCaregiverSelected()")
  i.fa.fa-arrow-left(ng-click="selectCaregiver('')")
    h4 {{selectedCaregiver}}
  p
  p.pull-right Tillgänglighet
    .progress
      .progress-bar(role='progressbar', id="tillganglighetbar" style='width: {{60}}%')

  p.pull-right  Bemötande
    .progress
      .progress-bar(role='progressbar', id="bemotandebar" style='width: {{60}}%')

  p.pull-right Delaktighet
    .progress
      .progress-bar(role='progressbar', id="delaktighetbar" style='width:{{20+60}}%')

  p.pull-right  Information
    .progress
      .progress-bar(role='progressbar', id="infomationbar" style='width: {{60}}%')

  p.pull-right Mat och fritid
    .progress
      .progress-bar(role='progressbar', id="matochfritidbar" style='width: {{60}}%')

  p Antal boenden: {{7}}
  p Nuvarande väntetid: {{46}} dagar
  a(href='{{google.com}}') Webbplats
